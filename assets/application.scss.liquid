html, body, main {
    height: 100%;
    margin: 0;
    padding: 0;
}

body {
    background: rgba($color: black, $alpha: 0.25);   
}

header {
    background-color: pink;
    height: 50px;
    padding: 0.5em;

    .brand-logo {
        img {
            height: 100%;
        }
    }
    .menu {
        display: none;
    }
    
    @media screen and (max-width: 700px) {
        .brand-logo {
            img {
                margin-left: 200px;
            }
        }

        .menu {
            display: inline;
            float: left;

            img {
                height: 40px;
                width: 40px;
            }
        }

        nav {
            a {
                display: inline;
                
                img {
                    text-align: center;
                }
            }

            li:not(.menu) {
                display: none; 
            }
        }
    }

    


    nav {
        display: inline;
        float: right;
        overflow: hidden;
        height: 100%;
        
        ul {
            height: 100%;
            list-style: none;
            
            li {
                display: inline;
                padding-left: 30px;
            }

            li a {

                display: inline;
                text-decoration: none;
                
                img {
                    height: 100%;
                }
            }
        }
    } 
}

main {
    margin: 0;
    padding: 0;
    flex-direction: column;

    .home-item {
        align-items: center;
        background-color: orange;
        display: flex;
        height: 30vw;
        justify-content: center;
        margin: auto;
        width: 100%;
        text-decoration: none;
        text-transform: uppercase;
    }

    .home-item:hover {
        background-color: blue;
    }
}

.landing-container {
    height: inherit;
    position: relative;
    margin: 1vh 1vw;
    text-align: center;

    .landing-logo {
        height: 83px;
        margin-top: 3vh;
    }

    .hero-section {
        @include center("both");
        margin: -40px -2px;
        font-family: $header-font-family;
        font-weight: $header-font-weight; 
        font-style:  $header-font-style;
        
        color: white;
        
        p {
            font-size: 22px !important;
            letter-spacing: .6em;
            margin-bottom: 30px;
        }

        .button {
            font-size: 12px !important;
            line-height: 1em;
            letter-spacing: .2em;
            background-color: transparent;
            text-align: center;
            color: white;
            text-decoration: none;
            border: 2px solid white; 
            padding: 1em 1.44em 1em 1.44em;
        }
    }
    
    .social-media {
        @include center("x");
        font-size: 24px;
        bottom: 10%;
        
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;

            li {
                display: inline;
            }

            i.fab {
                 background: transparent;
                 margin: 0px 5px;
                 color: white;
            }
        }
    }
}






