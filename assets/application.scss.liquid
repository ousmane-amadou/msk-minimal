html, body, main {
    height: 100%;
}

body {
    background: rgba($color: black, $alpha: 0.25);   
}

main {
    margin: 0;
    padding: 0;
    flex-direction: column;

    .home-item {
        align-items: center;
        background-color: orange;
        display: flex;
        height: 30vw;
        justify-content: center;
        margin: auto;
        width: 100%;
        text-decoration: none;
        text-transform: uppercase;
    }

    .home-item:hover {
        background-color: blue;
    }
}

