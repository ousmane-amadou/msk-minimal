$header-height: 50px;
$h-header-padding: 16px;

.inactive {
    display: none;
}

html, body, main {
    height: 100%;
    margin: 0;
    padding: 0;
}

.product-container {
    padding-top: calc(#{$header-height} +  2  * #{$h-header-padding});
    display: flex;
    flex-wrap: wrap;

    .item {
        display: block;
        padding-top: 50px;
        width: 50%;
    }

    .gallery img {
        margin-left: 20px;
    }
    
    .cart-form {
        * {
            display: block;
        }
        
        h1 {
            margin: 0;
        }
    }
}

.collection-container {
    display: flex;
    flex-wrap: wrap;
    overflow: hidden;

    .item {
        display: block;
        min-width: 300px;
        overflow: hidden;
        
        width: 50%;
        text-decoration: none;
        margin-bottom: -25px;
        
        .product-label {
            display: block;
            position: relative;
            left: 15px;
            top: -100px;
            color: white;
            max-height: 50vw;

            * {
                position: absolute;
                display: block;
            }

            .title {
                top: -10px;
                left: 25px;
            }

            .price {
                top: 15px;
                left: 25px;
            }

            button  {
                top: 30px;
                right: 60px;
            }
        }

        img {
            width: 100%;
        }
    }
}

.cart-container {
    padding: 50px 30px;
    padding-top: calc(#{$header-height} +  2  * #{$h-header-padding});

    .empty-cart {
        margin-top: calc(5% + 50px);
        text-align: center;
        width: 100%;
        height: 70%;
    }

    .default-cart {
        table {
            text-align: right;
            width: 100%;
        }
        .checkout-text {
            text-align: right;
            width: 100%;
        }
    }
}

.home {
    margin: 0;
    padding: 0;
    flex-direction: column;
    overflow: hidden;

    .title {
        font-size: 24px;
        line-height: 2em;
        letter-spacing: .3em;
    }

    .home-menu-item {
        align-items: center;
        display: flex;
        height: calc(#{$header-height} + 30vw);
        justify-content: center;
        margin: auto;
        width: 100%;
        max-width: 100%;
        text-decoration: none;
        text-transform: uppercase;
        overflow-y: hidden;

        img {
            height: calc(#{$header-height} + 30vw);
            width: 100%;
            object-fit: cover;
            position: absolute;
            z-index: -1;
        }        
    }

    .home-menu-item:hover {
        background-color: rgba(white, 0.50);
    }
}

@media screen and (max-width: 720px) {
    .collection-container {
        .item {
            display: block;
            width: 100%;            
        }
    }
}

