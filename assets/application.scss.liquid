html, body, main {
    height: 100%;
    margin: 0;
    padding: 0;
}

body {
    background: rgba($color: black, $alpha: 0.25);   
}

.home {
    margin: 0;
    padding: 0;
    padding-top: calc(50px + 1.25em);
    flex-direction: column;

    .home-item {
        align-items: center;
        background-color: orange;
        display: flex;
        height: calc(50px + 30vw);
        justify-content: center;
        margin: auto;
        width: 100%;
        max-width: 100%;
        text-decoration: none;
        text-transform: uppercase;
    }

    .home-item:hover {
        background-color: blue;
    }
}

header {
    background-color: rgba(black, 0);
    position: fixed;
    top: 0;
    height: 50px;
    width: calc(100% - 4em);
    padding: 0.75em 2em;
    
    .brand-logo {
        img {
            height: 90%;
        }
    }
    
    .top-nav li .menu-icon {
        display: none;
    }

    .side-nav {
        display: none;
    }
    
    @media screen and (max-width: 720px) {
        .top-nav li .menu-icon {
            display: inline;
        }
    
        .top-nav li:not(.icon-persist){
            display: none;
        }

        /* Code from W3C Schools */
        .side-nav {
            display: block;
            height: 100%; /* 100% Full-height */
            width: 0; /* 0 width - change this with JavaScript */
            position: fixed; /* Stay in place */
            z-index: 1; /* Stay on top */
            top: 0; /* Stay at the top */
            left: 0;
            background-color: #111; /* Black*/
            overflow-x: hidden; /* Disable horizontal scroll */
            padding-top: 60px; /* Place content 60px from the top */
            transition: 0.5s; /* 0.5 second transition effect to slide in the sidenav */
        }
    }

    .top-nav {
        display: block;
        float: right;
        overflow: hidden;
    
        ul {
            height: 100%;
            list-style: none;
            
            li {
                display: inline;
                margin: 10px;
            }

            li a {
                display: inline;
                text-decoration: none;
                
                img {
                    height: 100%;
                }
            }
        }
    } 
}