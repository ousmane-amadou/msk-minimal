$header-height: 50px;
$h-header-padding: 16px;

.inactive {
    display: none;
}


html, body, main {
    height: 100%;
    margin: 0;
    padding: 0;
}

.product-container {
    padding-top: calc(#{$header-height} +  2  * #{$h-header-padding});
    display: flex;
    flex-wrap: wrap;

    .item {
        display: block;
        padding-top: 50px;
        width: 50%;
    }

    .gallery img {
        margin-left: 20px;
    }
    
    .cart-form {
        * {
            display: block;
        }
        
        h1 {
            margin: 0;
        }
    }
}

.collection-container {
    display: flex;
    flex-wrap: wrap;
    padding-top: calc(#{$header-height} +  2  * #{$h-header-padding});

    .item {
        display: block;
        min-width: 300px;
        width: 50%;

        .product-label {
            position: relative;
            padding: 20px 0px;
            
            p {
                display: inline;
            }
        }

        img {
            width: 100%;
            
        }

        img:hover {
            opacity: 0.5;
        }
        
    }
}

.home {
    margin: 0;
    padding: 0;
    padding-top: calc(#{$header-height} +  1  * #{$h-header-padding});
    flex-direction: column;
    overflow: hidden;

    .title {
        font-size: 24px;
        line-height: 2em;
        letter-spacing: .3em;
    }

    .home-menu-item {
        align-items: center;
        display: flex;
        height: calc(#{$header-height} + 30vw);
        justify-content: center;
        margin: auto;
        width: 100%;
        max-width: 100%;
        text-decoration: none;
        text-transform: uppercase;
        overflow-y: hidden;
        

        img {
            height: calc(#{$header-height} + 30vw);
            width: 100%;
            object-fit: cover;
            position: absolute;
            z-index: -1;
        }        
    }

    .home-menu-item:hover {
        background-color: rgba(white, 0.50);
    }
}

@media screen and (max-width: 720px) {
    .collection-container {
        .item {
            display: block;
            width: 100%;            
        }
    }
}

