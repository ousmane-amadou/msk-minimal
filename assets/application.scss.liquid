html, body, main {
    height: 100%;
    margin: 0;
    padding: 0;
}

body {
    background: rgba($color: black, $alpha: 0.25);   
}

main {
    margin: 0;
    padding: 0;
    padding-top: calc(50px + 1.25em);
    flex-direction: column;

    .home-item {
        align-items: center;
        background-color: orange;
        display: flex;
        height: calc(50px + 30vw);
        justify-content: center;
        margin: auto;
        width: 100%;
        max-width: 100%;
        text-decoration: none;
        text-transform: uppercase;
    }

    .home-item:hover {
        background-color: blue;
    }
}

header {
    background-color: rgba(black, 0);
    position: fixed;
    height: 50px;
    width: calc(100% - 4em);
    padding: 0.75em 2em;
    
    .brand-logo {
        img {
            height: 90%;
        }
    }
    
    .top-nav li .menu-icon {
        display: none;
    }

    .side-nav {
        display: none;
    }
    
    @media screen and (max-width: 720px) {
        .top-nav li .menu-icon {
            display: inline;
        }
    
        .top-nav li:not(.icon-persist){
            display: none;
        }
    }

    .top-nav {
        display: block;
        float: right;
        overflow: hidden;
    
        ul {
            height: 100%;
            list-style: none;
            
            li {
                display: inline;
                padding-left: 30px;
            }

            li a {
                display: inline;
                text-decoration: none;
                
                img {
                    height: 100%;
                }
            }
        }
    } 
}








