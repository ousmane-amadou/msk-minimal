header {
    background-color: pink;
    height: 50px;
    padding: 0.5em;

    .brand-logo {
        img {
            height: 100%;
        }
    }
    .menu {
        display: none;
    }
    
    @media screen and (max-width: 700px) {
        .brand-logo {
            img {
                display: block;
                margin-left: auto;
                margin-right: auto;
            }
        }

        .menu {
            display: block;
            position: absolute;
            top: 10px;
            left: 10px;

            img {
                height: 40px;
                width: 40px;
            }
        }

        nav {
            a {
                display: inline;
                
                img {
                    text-align: center;
                }
            }

            li:not(.menu) {
                display: none; 
            }
        }
    }

    nav {
        display: inline;
        float: right;
        overflow: hidden;
        height: 100%;
        
        ul {
            height: 100%;
            list-style: none;
            
            li {
                display: inline;
                padding-left: 30px;
            }

            li a {

                display: inline;
                text-decoration: none;
                
                img {
                    height: 100%;
                }
            }
        }
    } 
}








