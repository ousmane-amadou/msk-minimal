$header-height: 50px;
$h-header-padding: 16px;

.inactive {
    display: none;
}

html, body, main {
    height: 100%;
    margin: 0;
    padding: 0;
}

.product-container {
    padding-top: calc(#{$header-height} +  2  * #{$h-header-padding});
    display: flex;
    flex-wrap: wrap;
    
    .item {
        display: block;
        padding-top: 50px;
        width: 50%;
    }

    .gallery img {
        margin-left: 20px;
    }
    
    .cart-form {
        * {
            display: block;
        }
        
        h1 {
            margin: 0;
        }
    }
}

.collection-container {
    display: flex;
    flex-wrap: wrap;
    overflow: hidden;
    z-index: 0;

    img {
        width: 100%;
        z-index: -5;
    }

    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 10; /* Sit on top */
        left: 0;
        top: 0;
        width: 100vw; /* Full width */
        height: 100vh; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */

        /* Modal Content/Box */
        .modal-content {
            background-color: #fefefe;
            margin: 2.5% auto; /* 15% from the top and centered */
            padding: 0px;
            border: 1px solid #888;
            height: 80%;
            width: 80%; /* Could be more or less, depending on screen size */
            overflow: hidden;
        }

        img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        .product-slide {
            display: none;
        }

        .active-slide {
            display: block;
        }

            /* Next & previous buttons */
        .prev, .next {
            cursor: pointer;
            position: absolute;
            top: 45%;
            width: auto;
            margin-top: -22px;
            padding: 16px;
            color: white;
            font-weight: bold;
            font-size: 18px;
            transition: 0.6s ease;
            border-radius: 0 3px 3px 0;
            user-select: none;
        }
    
        /* Position the "next button" to the right */
        .next {
            right: 10%;
            border-radius: 3px 0 0 3px;
        }
    
        /* On hover, add a black background color with a little bit see-through */
        .prev:hover, .next:hover {
            background-color: rgba(0,0,0,0.8);
        }
    
        /* Caption text */
        .text {
            color: #f2f2f2;
            font-size: 15px;
            padding: 8px 12px;
            position: absolute;
            bottom: 8px;
            width: 100%;
            text-align: center;
        }
        /* The Close Button */
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            margin-right: 10px;
            font-weight: bold;
        }
        
        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    }

    .item {
        display: block;
        position: relative;
        width: 50%;
        min-width: 300px;
        max-height: 50vh;
        overflow: hidden;
        text-decoration: none;

        .product-label {
            display: block;
            position: absolute;
            left: 15px;
            bottom: -5px;
            height: 75px;
            color: white;
            width: 100%;

            * {
                position: absolute;
                display: block;
            }

            .title {
                top: -10px;
                left: 25px;
            }

            .price {
                top: 15px;
                left: 25px;
            }

            #button1  {
                top: 30px;
                right: 60px;
                line-height: 1em;
                letter-spacing: .2em;
                background-color: transparent;
                color: white;
                text-decoration: none;
                border: 2px solid white; 
                padding: 1em 1.44em 1em 1.44em;
                margin-top: -25px;
                z-index: 5;
            }

            #button1:hover {
                background-color: red;
            }
        }
    }
}

.contact-container {
    padding: 50px 30px;
    padding-top: calc(#{$header-height} +  2  * #{$h-header-padding});

    input, textarea {
        display: block;
        width: 95%;
        padding: 10px 10px;
        margin: 10px 5px;
    }
    .button2 {
        line-height: 1em;
        letter-spacing: .2em;
        background-color: red;
        color: white;
        border: 2px solid red;
        text-decoration: none; 
        border: none;
        padding: 1em 1.44em 1em 1.44em;
        margin-top: -25px;
    }
    .button2:hover {
        background-color: white;
        color: red;
        border: 2px solid red;
    }
}
.cart-container {
    padding: 50px 30px;
    padding-top: calc(#{$header-height} +  2  * #{$h-header-padding});

    .empty-cart {
        margin-top: calc(5% + 50px);
        text-align: center;
        width: 100%;
        height: 70%;
    }


    .default-cart {
        table {
            text-align: right;
            width: 100%;
        }

        .checkout-text {
            text-align: right;
            width: 100%;
        }
    }
}

.home {
    margin: 0;
    padding: 0;
    flex-direction: column;
    overflow: hidden;

    .title {
        font-size: 24px;
        line-height: 2em;
        letter-spacing: .3em;
    }

    .home-menu-item {
        align-items: center;
        display: flex;
        height: calc(#{$header-height} + 30vw);
        justify-content: center;
        margin: auto;
        width: 100%;
        max-width: 100%;
        text-decoration: none;
        text-transform: uppercase;
        overflow-y: hidden;

        img {
            height: calc(#{$header-height} + 30vw);
            width: 100%;
            object-fit: cover;
            position: absolute;
            z-index: -1;
        }        
    }

    .home-menu-item:hover {
        background-color: rgba(white, 0.50);
    }
}

@media screen and (max-width: 720px) {
    .collection-container {
        .item {
            display: block;
            width: 100%;            
        }
    }
}

