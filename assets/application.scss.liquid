$header-height: 50px;
$h-header-padding: 16px;

$header-font-family: var(--header-font-family);
$header-font-weight: var(--header-font-weight);
$header-font-style: var(--header-font-style);

$secondary-font-family: var(--secondary-font-family);
$secondary-font-weight: var(--secondary-font-weight);
$secondary-font-style: var(--secondary-font-style);

@mixin center($axis: "both") {
    position: absolute;
    @if $axis == "y"{
        top:50%;
        -webkit-transform: translateY(-50%);
        -moz-transform: translateY(-50%);
        -ms-transform: translateY(-50%);
        -o-transform: translateY(-50%);
        transform: translateY(-50%);
    }
    @if $axis == "x"{
        left:50%;
        -webkit-transform: translateX(-50%);
        -moz-transform: translateX(-50%);
        -ms-transform: translateX(-50%);
        -o-transform: translateX(-50%);
        transform: translateX(-50%);
    }
    @if $axis == "both"{
        top:50%;
        left:50%;
        -webkit-transform: translate(-50%, -50%);
        -moz-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        -o-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
    }   
}

.inactive {
    display: none;
}

html, body, main {
    height: 100%;
    margin: 0;
    padding: 0;
}

.product-container {
    padding-top: calc(#{$header-height} +  2  * #{$h-header-padding});
    display: flex;
    flex-wrap: wrap;
    
    .item {
        display: block;
        padding-top: 50px;
        width: 50%;
    }

    .gallery img {
        margin-left: 20px;
    }
    
    .cart-form {
        * {
            display: block;
        }
        
        h1 {
            margin: 0;
        }
    }
}

.collection-container {
    display: flex;
    flex-wrap: wrap;
    overflow: hidden;
    z-index: 0;

    img {
        width: 100%;
        z-index: -5;
    }

    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 10; /* Sit on top */
        left: 0;
        top: 0;
        width: 100vw; /* Full width */
        height: 100vh; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        
        /* Modal Content/Box */
        .modal-content {
            @include center("both");
            background-color: none;
            // margin: auto; /* 15% from the top and centered */
            padding: 0px;
            // border: 1px solid #888;
            height: 80%;
            width: 80%; /* Could be more or less, depending on screen size */
            overflow: hidden;
        }

        form {
            position: fixed;
            z-index: 5;
            bottom: 175px;
            left: 150px;

            select, input {
                background-color: transparent;
                color: white;
                border: 2px solid white; 
                padding: 1em;
                margin-right: 25px;
            }

            input:hover {
                background-color: red;
            }

            // input {
            //     line-height: 1em;
            //     letter-spacing: .2em;
            //     background-color: red;
            //     color: white;
            //     text-decoration: none; 
            //     border: none;
            //     padding: 1em 1.44em 1em 1.44em;
            //     margin-top: -25px;
            // }
        }

        img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        .product-slide {
            display: none;
        }

        .active-slide {
            display: block;
        }

            /* Next & previous buttons */
        .prev, .next {
            @include center("y");
            cursor: pointer;
            width: auto;
            margin-top: -22px;
            padding: 16px;
            color: white;
            font-weight: bold;
            font-size: 18px;
            transition: 0.6s ease;
            border-radius: 0 3px 3px 0;
            user-select: none;
        }
    
        /* Position the "next button" to the right */
        .next {
            position: absolute;
            right: 0px;
            border-radius: 3px 0 0 3px;
        }
    
        /* On hover, add a black background color with a little bit see-through */
        .prev:hover, .next:hover {
            background-color: rgba(0,0,0,0.8);
        }
    
        /* Caption text */
        .text {
            color: #f2f2f2;
            position: fixed;
            font-size: 15px;
            font-family: $secondary-font-family;
            font-weight: $secondary-font-weight; 
            font-style: $secondary-font-style;
            letter-spacing: 0.2em;
            padding: 8px 12px;
            right: 150px;
            bottom: 175px;
            text-align: center;
        }

        /* The Close Button */
        .close {
            position: absolute;
            right: 0px;
            top: 15px;
            // background-color: black;
            // opacity: 0.5;
            padding: 10px 25px;
            color: white;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }
        
        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    }

    .item:hover {
        background-color: black;
        img {
            opacity: 0.75;
        }
    }
    
    .item {
        display: block;
        position: relative;
        width: 50%;
        min-width: 300px;
        margin-bottom: -10px;
        max-height: 50vh;
        overflow: hidden;
        text-decoration: none;

        .product-label {
            display: block;
            position: absolute;
            left: 30px;
            bottom: 0px;
            height: 75px;
            color: white;
            width: 90%;

            font-family: $secondary-font-family;
            font-weight: $secondary-font-weight; 
            font-style: $secondary-font-style;

            * {
                position: absolute;
                display: block;
            }

            .title {
                top: -45px;
                z-index: 5;
            }

            form {
                z-index: 5;
            
                input {
                    top: 30px;
                }

                select {
                    top: 0px;
                    background-color: transparent;
                    color: white;
                    border: 2px solid white; 
                    padding: 1em;
                }
            }

            #button1  {    
                line-height: 1em;
                letter-spacing: .2em;
                background-color: transparent;
                color: white;
                text-decoration: none;
                border: 2px solid white; 
                padding: 1em 1.44em 1em 1.44em;
                margin-top: -25px;
                z-index: 5;
            }

            #button1:hover {
                background-color: red;
            }
        }
    }
}

.contact-container {
    padding: 30px 15%;
    padding-top: calc(#{$header-height} +  2  * #{$h-header-padding});

    input, textarea {
        display: block;
        font-family: $secondary-font-family;
        width: 95%;
        padding: 10px 10px;
        margin: 10px 5px;
    }

    .button2 {
        line-height: 1em;
        letter-spacing: .2em;
        background-color: red;
        color: white;
        text-decoration: none; 
        border: none;
        padding: 1em 1.44em 1em 1.44em;
        margin-top: -25px;
    }

    .button2:hover {
        background-color: white;
        color: red;
    }
}

.cart-container {
    padding: 50px 30px;
    padding-top: calc(#{$header-height} +  2  * #{$h-header-padding});
    font-family: $secondary-font-family;
    font-weight: $secondary-font-weight; 
    font-style: $secondary-font-style;
    
    a {
        text-decoration: none;
        color: red;
    }
    button {
        line-height: 1em;
        letter-spacing: .2em;
        background-color: red;
        color: white;
        text-decoration: none; 
        border: none;
        padding: 1em 1.44em 1em 1.44em;
        margin-top: -25px;
    }

    .empty-cart {
        margin-top: calc(5% + 50px);
        text-align: center;
        width: 100%;
        height: 70%;
    }


    .default-cart {
        table {
            text-align: right;
            width: 100%;
        }

        .checkout-text {
            text-align: right;
            width: 100%;
        }
    }
}

.home {
    margin: 0;
    padding: 0;
    flex-direction: column;
    overflow: hidden;

    .title {
        font-size: 24px;
        font-family: $header-font-family;
        color:red;
        line-height: 2em;
        letter-spacing: .3em;
    }

    .home-menu-item {
        align-items: center;
        display: flex;
        height: calc(#{$header-height} + 30vw);
        justify-content: center;
        margin: auto;
        width: 100%;
        max-width: 100%;
        text-decoration: none;
        text-transform: uppercase;
        overflow-y: hidden;

        img {
            height: calc(#{$header-height} + 30vw);
            width: 100%;
            object-fit: cover;
            position: absolute;
            z-index: -1;
        }        
    }

    .home-menu-item:hover {
        background-color: rgba(white, 0.50);
    }
}

@media screen and (max-width: 720px) {
    .collection-container {
        .item {
            display: block;
            width: 100%;            
        }
    }

    form {
        z-index: 5;
    
        input {
            top: 30px;
            left: calc(62vw) !important;
        }
    }
}

@media screen and (min-width: 800px) {
    form {
        input {
            top: 30px;
            left: calc(30vw) !important;
        }
    }
}

@media screen and (min-width: 1200px) {
    form {
        input {
            top: 30px;
            left: calc(32vw + 20px) !important;
        }
    }
}
