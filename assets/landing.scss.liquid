// Landing Page Styles
$header-font-family: var(--header-font-family);
$header-font-weight: var(--header-font-weight);
$header-font-style: var(--header-font-style);
$primary-color: white;

@mixin center($axis: "both") {
    position: absolute;
    @if $axis == "y"{
        top:50%;
        -webkit-transform: translateY(-50%);
        -moz-transform: translateY(-50%);
        -ms-transform: translateY(-50%);
        -o-transform: translateY(-50%);
        transform: translateY(-50%);
    }
    @if $axis == "x"{
        left:50%;
        -webkit-transform: translateX(-50%);
        -moz-transform: translateX(-50%);
        -ms-transform: translateX(-50%);
        -o-transform: translateX(-50%);
        transform: translateX(-50%);
    }
    @if $axis == "both"{
        top:50%;
        left:50%;
        -webkit-transform: translate(-50%, -50%);
        -moz-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        -o-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
    }   
}

.overlay {
    position: fixed; /* Sit on top of the page content */
    width: 100%; /* Full width (cover the whole page) */
    height: 100%; /* Full height (cover the whole page) */
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.25); /* Black background with opacity */
    z-index: -5; /* Specify a stack order in case you're using a different order for other elements */
}

.landing {
    height: inherit;
    position: relative;
    text-align: center;
    text-transform: uppercase;

    .landing-logo {
        @include center("x");
        height: 85px;
        margin-top: 6vh;
    }

    .slideshow-container { 
        position: relative;
        height: 100vh;  width: 100vw;
        overflow: hidden;
        
        /* Fading animation */
        .fade {
            -webkit-animation-name: fade;
            -webkit-animation-duration: 1.5s;
            animation-name: fade;
            animation-duration: 1.5s;
        }
        @-webkit-keyframes fade {
            from {opacity: .4}
            to {opacity: 1}
        }
        
        @keyframes fade {
            from {opacity: .4}
            to {opacity: 1}
        }
        
        .slide {
            display: block;
            
            transition: 0.6s ease;
            
            img {
                position: absolute;
                height: 100%;
                object-fit: cover;
                min-height: 100vh;
                min-width: 100vw;
                left: 0;
                z-index: -10;
                
            }
        }
        
    }

    .hero-section {
        @include center("both");
        margin: -40px -2px;
        font-family: $header-font-family;
        font-weight: $header-font-weight; 
        font-style:  $header-font-style;
        color: $primary-color;
        
        p {
            font-size: 22px !important;
            letter-spacing: .6em;
            margin-bottom: 30px;
        }

        .button {
            font-size: 12px !important;
            line-height: 1em;
            letter-spacing: .2em;
            background-color: transparent;
            text-align: center;
            color: $primary-color;
            text-decoration: none;
            border: 2px solid $primary-color; 
            padding: 1em 1.44em 1em 1.44em;
        }

        .button:hover {
            background-color: white;
            transition: 0.4s ease;
            color:black;
        }
    }
    
    .social-media {
        @include center("x");
        font-size: 24px;
        bottom: 10%;
        
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;

            li {
                display: inline;
            }

            i.fab {
                 background: transparent;
                 margin: 0px 5px;
                 color: $primary-color;
            }
        }
    }
}